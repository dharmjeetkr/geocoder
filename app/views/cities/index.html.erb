
<p id="notice"><%= notice %></p>
<div class="container">
<h2>Cities Name </h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Country</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.state %></td>
        <td><%= city.country %></td>
        <td><%= city.latitude %></td>
        <td><%= city.longitude %></td>
        <td><%= link_to 'Show', city, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_city_path(city), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', city, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New City', new_city_path, class:"btn btn-success" %>
